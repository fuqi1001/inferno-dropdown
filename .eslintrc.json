{
  // http://eslint.org/docs/rules/
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": [1, { "pragma": "Inferno" }],
      "modules": true,
      "react": true,
      "es6": true
    }
  },
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "Inferno": true
  },
  "rules": {
    "semi": 0,
    "vars-on-top": 0,
    "spaced-comment": 0,
    "prefer-template": 0,
    "consistent-return": 0,
    "comma-dangle": 0,
    "max-len": 0,
    "arrow-body-style": 0,
    "new-cap": 0,
    "quotes": 0,
    "quote-props": 0,
    "prefer-arrow-callback": 0,
    "func-names": 0,
    "padded-blocks": 0,
    "keyword-spacing": 0,
    "no-var": 0,
    "no-unused-vars": 0,
    "no-console": 0,
    "no-constant-condition": 2,
    "no-debugger": 1,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-inner-declarations": 0,
    "no-use-before-define": 0,
    "no-return-assign": 0,
    "no-trailing-spaces": 0,
    "no-unused-expressions": 0,
    "no-mixed-spaces-and-tabs": 2,
    "no-shadow-restricted-names": 2,
    "space-before-function-paren": 0,
    "global-require": 0,
    "react/jsx-no-bind": 0,
    "react/jsx-space-before-closing": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/prop-types": 0,
    "react/prefer-stateless-function": 0
  }
}
